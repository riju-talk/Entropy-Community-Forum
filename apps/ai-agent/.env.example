# Groq API Key (FREE - Get from https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Shared Secret (must match NEXT_PUBLIC_AI_BACKEND_TOKEN in Next.js app)
AI_BACKEND_TOKEN=your_secure_shared_secret_here

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=true

# Frontend URLs (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# LLM Configuration
LLM_MODEL=llama3-8b-8192
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Embedding Model (GPT4All - FREE and local)
EMBEDDING_MODEL=gpt4all

# Storage
CHROMA_PERSIST_DIR=./data/chroma_db
UPLOAD_DIR=./data/uploads

# File Upload Limits (in bytes)
MAX_UPLOAD_SIZE=10485760

# File types (comma-separated)
ALLOWED_FILE_TYPES=.pdf,.txt,.doc,.docx
