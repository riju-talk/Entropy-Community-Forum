{
  "name": "entropy-community-forum",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:app": "turbo run dev --filter=@entropy/app",
    "dev:agent": "turbo run dev --filter=@entropy/ai-agent",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "setup:agent": "cd apps/ai-agent && python setup.py"
  },
  "devDependencies": {
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*"
  ]
}
